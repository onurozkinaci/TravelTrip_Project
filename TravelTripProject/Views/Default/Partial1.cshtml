        <div class="left">
            <div class="bot-left">
                <img src="@item.BlogImage" alt="" style="height:155px; width:275px;"/>
            </div>
            <div class="left-text">
                <h4>@item.Title</h4>
                <span class="doller">@item.Date.ToString("dd.MM.yyyy")</span>
                <p>@item.Description.Substring(0,80)</p>
                <p><a href="/Blog/BlogDetail/@item.ID"><span class="read">Devamini oku >></span></a></p>
            </div>
        </div>
    }
