<div class="content-form">
    <h3>Yorum bırak</h3>
    <form id="commentForm" method="post">
        <input type="hidden" placeholder="Blog Id" name="BlogId" value="@ViewBag.value" required />
        <input type="text" placeholder="Kullanıcı Adı" name="Username" required />
        <input type="text" placeholder="Mail Adresi" name="Mail" required />
        <textarea placeholder="Yorum" name="Comment"></textarea>
        <input type="submit" value="GÖNDER" />
    </form>
</div>