@using TravelTripProject.Models.Classes
@model List<Yorumlar>

@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Username</td>
            <td>@item.Mail</td>
            <td>@item.Comment</td>
            <td>@item.Blog.Title</td> @*BlogId'ye sahip olan nesne uzerinden direkt Title'a erisilebilir.*@
            <td><a class="btn btn-danger" href="#">Sil</a></td>
            <td><a class="btn btn-warning" href="#">Güncelle</a></td>
        </tr>
    }
</table>

